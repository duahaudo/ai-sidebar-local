{
  "manifest_version": 3,
  "name": "AI Assistant Sidebar",
  "version": "1.0.0",
  "description": "AI-powered sidebar assistant for any webpage with Ollama integration",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {},
  "web_accessible_resources": [
    {
      "resources": ["dist/src/sidebar/*", "dist/*.js", "dist/*.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle AI sidebar"
    }
  }
}